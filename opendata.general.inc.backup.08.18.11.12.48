    $view->disabled = FALSE; /* Edit this to true to make a default view disabled initially */
    
    //Get the list of column names
    $colnames = array();
    $colnames = _opendata_getFields($data_table_id);
    
    //Get array of the summary fields
    $summary_fields = array();
    $summary_fields = $form_state['storage']['summary_values']['summary_fields'];
    
    ##
    ## Create a 'default' display
    ##
    $handler = $view->new_display('default', $data_table_name, 'default');
    
    //Build the fields
    $selected_fields = array();
    $selected_fields = _opendata_build_view_fields($data_table_name, $colnames, $summary_fields, $url);
